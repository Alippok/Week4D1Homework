<form action="/pets/<%= @pet.id %>" method="post">
  
  <legend>Edit a Pet</legend>

    <label>Pet Name:</label>
    <input type="text" name="name" value="<%= @pet.name %>">

    <label>Pet Type:</label>
    <input type="text" name="type" value="<%= @pet.type %>">

    <label>Pet Picture</label>
    <input type="url" name="picture_url" value="<%= @pet.picture_url %>">

    <label>Pet Store</label>
    <input type="number" name="store_id" value="<%= @pet.store_id %>"

    <button type="submit">Update</button>

</form>